@model WebStore.Models.UserBin;

<div>
    <div>
        <p class="TitleText">Cart</p>
    </div>

    @if (Model != null && Model.Bin != null && Model.Bin.Any())
    {
        <div>
            <table class="table">
                @foreach (var product in Model.Bin)
                {
                    <tr>
                        <td>
                            <p><img src=@product.Image alt="No image" width="100" height="100" /></p>
                        </td>

                        <td>
                            <p>@product.Name</p>
                        </td>

                        <td>
                            <p>@product.Manufacturer</p>
                        </td>

                        <td>
                            <p>@product.Description</p>
                        </td>

                        <td>
                            <p>@product.Price</p>
                        </td>

                        <td>
                            <p>@product.SerialNumber</p>
                        </td>

                        <td>
                            <form method="post" asp-action="DeleteFromBin" asp-route-id="@product.Id">
                                <input class="btn btn-primary" type="submit" value="Delete" />
                            </form>
                        </td>
                    </tr>
                }
            </table>

            @if (Model.Offer != null)
            {
                <div>
                    <label>Along with this, they often buy: </label>
                </div>

                <div>
                    <table class="table">
                        <tr>
                            <td>
                                <p>Image</p>
                            </td>

                            <td>
                                <p>Name</p>
                            </td>

                            <td>
                                <p>Manufacturer</p>
                            </td>

                            <td>
                                <p>Description</p>
                            </td>

                            <td>
                                <p>Price ₴</p>
                            </td>

                            <td>
                                <p>Serial Number</p>
                            </td>

                            <td>
                                <p />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p><img src=@Model.Offer.Image alt="No image" width="100" height="100" /></p>
                            </td>

                            <td>
                                <p>@Model.Offer.Name</p>
                            </td>

                            <td>
                                <p>@Model.Offer.Manufacturer</p>
                            </td>

                            <td>
                                <p>@Model.Offer.Description</p>
                            </td>

                            <td>
                                <p>@Model.Offer.Price</p>
                            </td>

                            <td>
                                <p>@Model.Offer.SerialNumber</p>
                            </td>

                            <td>
                                <form method="post" asp-action="AddToBin" asp-route-id="@Model.Offer.Id">
                                    <input class="btn btn-primary" type="submit" value="Add to bin" />
                                </form>
                            </td>
                        </tr>
                    </table>
                </div>
            }
        </div>

        <div>
            <form method="post" asp-action="Buy">
                <input class="btn btn-primary" type="submit" value="Buy" />
            </form>
        </div>
    }     
</div>
